{
  "bindings": [
    {
      "authLevel": "function",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get"
      ]
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "name": "getTasks",
      "databaseName": "TasksDB",
      "collectionName": "tasks",
      "connectionStringSetting": "CosmosDBConnection",
      "direction": "in",
      "Id": "{Query.id}",
      "PartitionKey": "{Query.partitionKeyValue}",
      "CreateLeaseCollectionIfNotExists": "true"

    }
  ],
  "scriptFile": "../dist/getTasks/index.js"
}
